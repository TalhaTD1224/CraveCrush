<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When text is visible (checked), show the icon that means "tap to hide" -->
    <item android:drawable="@drawable/ic_password_visibility" android:state_checked="true"/>
    <!-- By default (text is hidden), show the icon that means "tap to show" -->
    <item android:drawable="@drawable/ic_password_visibility_off"/>
</selector>